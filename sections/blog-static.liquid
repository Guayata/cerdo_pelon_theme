{{ 'blog-static.scss.css' | asset_url | stylesheet_tag }}
<div class="container-fluid blog">
  <div class="content-items">
    <div class="item-blog">
      <div class="texts"> 
        <t>{{ section.settings.blog-title }}</t><br/><br/>
        <d>{{ section.settings.blog-subtitle }}</d><br/><br/>
        <div class="content-button">
          <a href="{{ section.settings.button_link_1 }}">
            {{ section.settings.button_label_1 }}
          </a>
        </div>
      </div>
      <div class="imagee">
        <img src="{{section.settings.image-blog | img_url:" master "}}">
      </div>
    </div>
    <div class="item-blog">
      <div class="texts">
        <t>{{ section.settings.blog-title-2 }}</t><br /><br/>
        <d>{{ section.settings.blog-subtitle-2 }}</d><br/><br/>
