<style>
  .description-txt p{
    color: {{section.settings.color_text}};
  }
</style>
<div class="content-page-width">
  <div class="row">
    <div class="container-fluid section-image-random" style="{{ section.settings.custom_space }};">
      <div class="row">
        <div class="col-12 page-width-padding">
          <div class="row">
            <div class="col-12 col-lg-12">
              <div class="box-description h-100"  style="background: {{section.settings.bg_color}}">
                <div class="row h-100">
                  <div class="col-12">
                    <div class="name-section" style="color: {{section.settings.color_text}};">
                      {% if section.settings.name_section != blank %}
                      {{ section.settings.name_section }} 
                      <span class="float-right">
                        {% if section.settings.enable_icon %}
                        {% if section.settings.icon != blank %}
                        {{ section.settings.icon | img_url: 'master' | img_tag: 'feature-row__image' }}
                        {% else %}
                        {% endif %}
                        {% endif %}
                      </span>
                      {% endif %}
                    </div>
                  </div>
                  <div class="col-12 col-lg-7">
                    <div class="row">
                      <div class="col-12">
                        <div class=" box-description-block">
                          <div class="row h-100">
                            <div class="col-12">
                              <p class="megatitle" style="color: {{section.settings.color_text}};">
                                {% if section.settings.title != blank %}
                                {{ section.settings.title }} 
                                {% endif %}
                              </p>
                            </div>
                            <div class="col-12 description-txt text-justify">
                              {% if section.settings.text != blank %}
                              {{ section.settings.text }} 
                              {% endif %}
                            </div>
                            <div class="col-12 content-button">
                              {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                              <a href="{{ section.settings.button_link }}" class="btn">
                                {{ section.settings.button_label }}
                              </a>
                              {% endif %}
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-lg-5 my-auto d-none d-lg-block">
                    <div class="row justify-content-center">
                      <div class="col-12 col-lg-10">
                        <div class="slider-marcas-encontrar">
                          {% for block in section.blocks %}
                          <div class="text-center">
                            <img class="img-fluid lazyload m-auto"
                                 data-src="{{ block.settings.image_logotipo | img_url: 'master' }}"
                                 data-widths="[180, 360, 540, 720, 900, 1080]"
                                 data-aspectratio="{{ preview_image.aspect_ratio }}"
                                 alt="{{ preview_image.alt | escape }}">
                          </div>
                          {% endfor %}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Seccion donde estamos",
  "class": "images-random",
  "settings": [
   {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
 {
      "type": "color",
      "id": "color_text",
      "label": "Color text",
      "default": "#000"
    },
     
{
      "type": "text",
      "id": "name_section",
      "label": "Heading",
      "default": "Name section"
    },
  {
          "type": "checkbox",
          "id": "enable_icon",
          "label": "Show icon",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Text columns with images"
    },
  {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
        },
   {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
  ],
 "blocks": [
    {
      "type": "text_block",
      "name": "Column",
      "settings": [
 {
          "type": "image_picker",
          "id": "image_logotipo",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Seccion donde estamos",
      "category": "Images random"
    }
  ]
}
{% endschema %}
