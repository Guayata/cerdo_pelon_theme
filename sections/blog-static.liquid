          <a href="{{ section.settings.button_link_2 }}">
            {{ section.settings.button_label_2 }}
          </a>
        </div>
      </div>
      <div class="imagee">
        <img src="{{section.settings.image-blog-2 | img_url:" master "}}">
      </div>
    </div>
    <div class="item-blog">
      <div class="texts">
        <t>{{ section.settings.blog-title-3 }}</t><br /><br/>
        <d>{{ section.settings.blog-subtitle-3 }}</d><br/><br/>
        <div class="content-button">
          <a href="{{ section.settings.button_link }}">
            {{ section.settings.button_label }}
          </a>
        </div>
      </div>
      <div class="imagee">
        <img src="{{section.settings.image-blog-3 | img_url:" master "}}">
      </div>
    </div>
  </div>
  <div class="exter text-upercase">
    <a href="{{ section.settings.button_link_vermas }}">
            {{ section.settings.button_vermas }}
          </a>
  </div>
</div>

