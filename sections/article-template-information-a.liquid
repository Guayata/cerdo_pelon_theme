                          {{ splitShortDesc[2] | split: '[/shortdesc]' | first }}
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-lg-8 contenedor-ingredientes contenedor-ingredientes-big">
                    <div class="row box-line-content h-100">
                      <div class="box-ingredientes">
                        <div class="titulo-ingredientes mb-0">
