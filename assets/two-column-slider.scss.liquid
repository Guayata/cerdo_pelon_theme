/*========================= Slider ==============================*/

.slideshow-container {
    width: 75%;
    position: relative;
    margin: 2% auto;
  @media(max-width: 576px){
    margin: 10% auto;
  }
}

.mySlides {
    display: none;
    height: 150px;
}

.prev,
.next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    margin-top: -45px;
    padding: 16px;
    color: #222428;
    font-weight: bold;
    font-size: 30px;
    transition: .6s ease;
    border-radius: 0 3px 3px 0
}

.next {
    right: -50px;
  top:60px;
    border-radius: 3px 3px 3px 3px
}

.prev {
    left: -50px;
  top:60px;
    border-radius: 3px 3px 3px 3px
}

.prev:hover,
.next:hover {
    color: #fff;
    background-color: #fff;
    opacity: 0.5;
}

.text {
    color: #fff;
    font-size: 15px;
    padding-top: 12px;
    padding-bottom: 12px;
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
    background-color: #222428
}

.numbertext {
    color: #f2f2f2;
    font-size: 12px;
    padding: 8px 12px;
    position: absolute;
    top: 0
}

.dot {
    cursor: pointer;
    height: 15px;
    width: 15px;
    margin: 0 2px;
    background-color: #bbb;
    border-radius: 50%;
    display: inline-block;
    transition: background-color .6s ease
}

.active,
.dot:hover {}

.fade:not(.show) {
    opacity: 1 !important;
}

.fade {}

.med {
    margin: 0 10%;
    text-align: center;
}

.edtex {
    font-size: 15px;
    font-family: 'Helvetica Light';
}

.item-img {
    display: flex;
    justify-content: space-evenly;
    img {
        width: 150px;
      
        @media (max-width: 576px) {
             width: 110px;
        }
    }
}