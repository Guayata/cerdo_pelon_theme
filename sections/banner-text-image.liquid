<style>
  .description-txt p{
    color: {{section.settings.color_text}};
  }
</style>
<div class="container-fluid section-image-random" style="{{ section.settings.custom_space }};">
  <div class="row content-page-width">
    <div class="col-12 page-width-padding">
      <div class="row">
        <div class="col-12 col-lg-12">
          <div class="row box-description h-100"  style="background: url({{section.settings.bg_general | img_url: 'master'}})">
            <div class="col-12 my-auto">
              <div class=" box-description-block">
                <div class="row h-100">
                  <div class="col-12 my-auto">
                    <p class="megatitle" style="color: {{section.settings.color_text}};">
                      {% if section.settings.title != blank %}
                      {{ section.settings.title }} 
                      {% endif %}
                    </p>
                  </div>
                  <div class="col-12 description-txt text-justify">
                    {% if section.settings.text != blank %}
                    {{ section.settings.text }} 
                    {% endif %}
                  </div>
                  <div class="col-12 content-button">
                    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                    <a href="{{ section.settings.button_link }}" class="btn" target="_blank">
                      {{ section.settings.button_label }}
                    </a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Seccion banner text",
  "class": "seccion-images-banner-txt",
  "settings": [
   {
      "type": "image_picker",
      "id": "bg_general",
      "label": "Background Image"
    },
 {
      "type": "color",
      "id": "color_text",
      "label": "Color text",
      "default": "#000"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Text columns with images"
    },
  {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
        },
   {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
  ],
  "presets": [
    {
       "name": "Seccion banner text",
      "category": "Images"
    }
  ]
}
{% endschema %}
