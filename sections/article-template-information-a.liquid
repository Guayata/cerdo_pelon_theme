                          {% assign splitShortDesc = shortdesc | split: "|" %}
                          {{ splitShortDesc[3] | split: '[/shortdesc]' | first }}
                        </div>
                      </div>
                      <div class="col-12 box-contenido-description">
                        <div class="contenedor-procedimiento">
                          {% assign shortdesc = article.content | split: '[shortdesc]' | last %}
                          {% assign splitShortDesc = shortdesc | split: "|" %}
                          {{ splitShortDesc[4] | split: '[/shortdesc]' | first }}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12">
                    <div class="slider-recetas">
                      {% assign shortdesc = article.content | split: '[shortdesc]' | last %}
                      {% assign splitShortDesc = shortdesc | split: "|" %}
                      {{ splitShortDesc[5] | split: '[/shortdesc]' | first }}
                    </div>
                  </div>
                  <div class="col-12 text-right">
                    <div class="content-information-product-div">
                      <div class="imagen-desktop d-none d-lg-block content-information-banner-product">
                        {% assign shortdesc = article.content | split: '[shortdesc]' | last %}
                        {% assign splitShortDesc = shortdesc | split: "|" %}
                        {{ splitShortDesc[6] | split: '[/shortdesc]' | first }}
                      </div>
                      <div class="imagen-desktop d-block d-lg-none content-information-banner-product">
                        {% assign shortdesc = article.content | split: '[shortdesc]' | last %}
                        {% assign splitShortDesc = shortdesc | split: "|" %}
                        {{ splitShortDesc[7] | split: '[/shortdesc]' | first }}
