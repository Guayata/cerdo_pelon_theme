
<!-- Modal -->
<div class="modal fade modalCodigoPromoOpen" id="modalCodigoPromocionalOpen" tabindex="-1" aria-labelledby="modalCodigoPromocionalOpen" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="background: {{section.settings.color_modal}}">
      <div class="modal-body">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                                                                                viewBox="0 0 17.54 17.78" enable-background="new 0 0 17.54 17.78" xml:space="preserve">
          <g>
            <g>
              <polyline fill="none" stroke="#FFFFFF" stroke-miterlimit="10" points="17.18,0.35 8.77,8.89 17.18,17.43 		"/>
              <polyline fill="none" stroke="#FFFFFF" stroke-miterlimit="10" points="0.36,17.43 8.77,8.89 0.36,0.35 		"/>
            </g>
          </g>
          </svg></button>
        <div class="row h-100 content-information">
          <div class="col-12">
            <a href="{{section.settings.link_modal }}">
              {% if section.settings.image_desktop != blank%}
              <img class="img-fluid lazyload"
                   data-src="{{ section.settings.image_desktop}}"
                   data-widths="[180, 360, 540, 720, 900, 1080]"
                   data-aspectratio="{{ preview_image.aspect_ratio }}"
                   alt="{{ preview_image.alt | escape }}">
              {% endif %}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Codigo promocional modal",
  "class": "codigo-promocional",
  "settings": [
    {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Imagen Modal"
        },
	    {
          "type": "url",
          "id": "link_modal",
          "label": "Link Modal"
        }
],
"presets": [
{
"name": "Codigo promocional modal",
"category": "modal"
}
]
}
{% endschema %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
<script>
  $("#modalCodigoPromoOpen").show();
</script>