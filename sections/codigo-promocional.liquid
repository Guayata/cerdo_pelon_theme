},
{
"type": "url",
"id": "link_url",
"label": "Link"
},
{
"type": "image_picker",
"id": "image_icono",
"label": "Icono"
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Text columns with images"
},
{
"type": "color",
"id": "color_title",
"label": "Color text",
"default": "#FFF"
},
{
"type": "text",
"id": "subtitle",
"label": "Heading",
"default": "Text columns with images"
},
{
"type": "color",
"id": "color_subtitle",
"label": "Color text",
"default": "#FFF"
},
{
"type": "header",
"content": "============ Modal ==========="
},
{
"type": "checkbox",
"id": "enable_modal",
"label": "Enable Modal",
"default": true
},
{
"type": "color",
"id": "color_modal",
"label": "Color Background",
"default": "#FFF"
},
{
"type": "text",
"id": "title_modal",
"label": "Heading",
"default": "Text columns with images"
},
{
"type": "color",
"id": "color_title_modal",
"label": "Color text",
"default": "#FFF"
},
{
"type": "text",
"id": "subtitle_modal",
"label": "Heading",
"default": "Text columns with images"
},
{
"type": "color",
"id": "color_subtitle_modal",
"label": "Color text",
"default": "#FFF"
},
{
"type": "richtext",
"id": "text_modal",
