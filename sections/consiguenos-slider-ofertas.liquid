<div class="content-page-width">
  <div class="row">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-12  col-md-11 col-lg-12 container-promociones-site">
          <div class="content-box-promociones promociones">
            {% for block in section.blocks %}
            <div class="slider-object">
              <div class="row h-100 box-container-slider">
                <div class="col-12 content-image text-center">
                  <div class="row h-100 justify-content-center">
                    <div class="col-12 col-lg-6 my-auto">
                      {% if block.settings.image != blank %}
                      {{ block.settings.image | img_url: 'master' | img_tag: 'feature-row__image','img-fluid m-auto' }}
                      {% else %}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      {% endif %}
                    </div>
                  </div>

                </div>
                <div class="col-12 content-information">
                  <div class="row">
                    <div class="col-12 content-txt">
                      <div class="title-promocion text-uppercase" style="background: {{block.settings.color_title_promocion}}; color: {{block.settings.color_promocion}}">
                        <div class="box">
                          {{block.settings.title_promocion}}
                        </div>
                      </div>
                      <div class="text-description">
                        {{block.settings.text_description}}
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="content-button text-center text-lg-right">
                        {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                        <a href="{{ block.settings.button_link }}" class="btn" target="_blank" style="background:{{block.settings.color_button}}; color:{{block.settings.color_text_button}}">
                          {{ block.settings.button_label }}
                        </a>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>    
      </div>
    </div>
  </div>
</div>
{% schema %}
{
"name": "Promociones consigenos",
"class": "promociones-logotipos",
"settings": [

],
"blocks": [
{
"type": "text_block",
"name": "Column",
"settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
  {
          "type": "text",
          "id": "title_promocion",
          "label": "Titulo"
        },
 {
          "type": "color",
          "id": "color_title_promocion",
          "label": "Color background box",
"default": "#FFF"
        },
 {
          "type": "color",
          "id": "color_promocion",
          "label": "Color box",
"default": "#FFF"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
"default": "Ir a la tienda"
        },
  {
          "type": "richtext",
          "id": "text_description",
          "label": "Text description",
"default": "<p>Text description</p>"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
 {
          "type": "color",
          "id": "color_button",
          "label": "Color background button",
"default": "#FFF"
        },
{
          "type": "color",
          "id": "color_text_button",
          "label": "Color button",
"default": "#FFF"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promociones consiguenos",
      "category": "Promociones",
      "blocks": [
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        }
      ]
    }
  ]
}
{% endschema %}
